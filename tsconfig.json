{
	"compilerOptions": {
		"target": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"lib": ["ES2020"],
		"types": ["@citizenfx/client", "@citizenfx/server", "@types/node"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
